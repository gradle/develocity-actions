{
  "name": "maven-build-scan-save",
  "description": "Save Maven Build Scans",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradle/github-actions.git"
  },
  "keywords": [
    "actions",
    "gradle"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run lint && npm run package && npm run test",
    "format:write": "prettier --write src/**.ts",
    "format:test": "prettier --write __tests__/**.ts",
    "lint": "eslint src/**.ts",
    "test": "jest",
    "package": "ncc build src/index.ts"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/artifact": "1.1.2",
    "@actions/core": "^1.10.1",
    "@actions/github": "5.1.1",
    "@actions/glob": "0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.51.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
